{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/page/[pokemonId].test.tsx",
    "src/app/page/[pageId].test.tsx",
    ".next/types/**/*.ts",
    "src/app/__tests__/[pokemon].test.tsx",
    "src/pages/color/[color].tsx0"
  ],
  "exclude": ["node_modules", ".next"]
}
